input type:touchpad {
    dwt disabled
    tap enabled
    drag disabled
    click_method clickfinger
    natural_scroll enabled
    middle_emulation disabled
    tap_button_map lrm
    scroll_factor 0.15
    pointer_accel 0.4
    accel_profile adaptive
}

input type:keyboard {
    xkb_layout us
    xkb_options ""
}

