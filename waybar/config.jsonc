// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    // "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "sway/workspaces",
        "sway/window"
    ],
    "modules-right": [
        "tray",
        "custom/wlsunset",
        "pulseaudio",
        "cpu",
        "custom/gpu",
        "temperature",
        "power-profiles-daemon",
        "battery",
        "memory",
        "network",
        "group/time"
    ],
    "group/time": {
        "orientation": "horizontal",
        "modules": [
            "clock",
            "custom/timezone"
        ],
        "click-to-reveal": true,
        "drawer": {
            "transition-duration": 0,
            "transition-left-to-right": false
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        // "timezone": "America/New_York",
        "interval": 1,
        "format": "{:%a %b %d %T}",
        "locale": "en_GB.UTF-8",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3
        },
        "on-click": "foot -a calcurse_usercliapp calcurse"
    },
    "cpu": {
        "interval": 5,
        "format": "{usage}%",
        "tooltip": true
    },
    "memory": {
        "interval": 5,
        "format": "{used:0.1f}G {swapUsed:0.1f}G ",
        "tooltip-format": "Totals: {total:0.2f}G {swapTotal:0.2f}G",
        "on-click": "foot -a htop_usercliapp htop"
    },
    "temperature": {
        "interval": 5,
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""],
        "tooltip": false
    },
    "battery": {
        "interval": 5,
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "performance": "",
        "balanced": "",
        "power-saver": ""
      }
    },
    "network": {
        "interval": 5,
        "format": "{bandwidthUpBytes} {bandwidthDownBytes} ",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icone163} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol",
        "max-volume": 153,
        "on-scroll-up": "",
        "on-scroll-down": ""
    },
    "custom/gpu": {
        "exec": "cat /sys/class/hwmon/hwmon8/device/gpu_busy_percent",
        "format": " {}% ",
        "return-type": "",
        "interval": 5,
        "tooltip-format": "GPU: {}%"
    },
    "custom/wlsunset": {
        "interval": "once",
        "exec-on-event": true,
        "exec": "sh /home/cyrilli/.config/waybar/wlsunset.sh",
        "exec-if": "true",
        "on-click": "true",
        "return-type": "json",
        "format": "{icon}",
        "tooltip-format": "wlsunset: {alt}",
        "format-icons": {
            "off": "☀️",
            "on": "🌙"
        }
    },
    "custom/timezone": {
        "interval": "once",
        "exec-on-event": true,
        "exec": "while pgrep zenity >/dev/null 2>&1 || pgrep timedatectl >/dev/null 2>&1; do sleep 0.5; done; timedatectl status | grep 'Time zone: ' | sed 's/^ *//;s/Time zone: //'",
        "exec-if": "true",
        "on-click": "sudo timedatectl set-timezone $(/usr/bin/zenity --entry --title 'Set Time Zone' --text 'Enter a time zone:')",
        "tooltip": false,
    }
}
